{
  "compilerOptions": {
      "target": "es2017",
      "types": ["node", "jest"],
      "allowJs": true,
      "skipLibCheck": true,
      "esModuleInterop": true,
      "allowSyntheticDefaultImports": true,
      "strict": true,
      "forceConsistentCasingInFileNames": true,
      "module": "commonjs",
      "moduleResolution": "node",
      "isolatedModules": true,
      "baseUrl": ".",
      "outDir": "./dist",
      "rootDir": "./src"
    },
  "include": ["./src"],
}
